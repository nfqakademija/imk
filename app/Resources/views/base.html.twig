<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}{{ "Ponder" }}{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <link href="https://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet">
    {% endblock %}
    {% block canonical_meta %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
    {% endblock %}
</head>

<body>

{% block header %}
    {% include "::inc/header.html.twig" %}
{% endblock %}

{% block container %}
    {% block body %}
    {% endblock %}
    {% include ":inc:new_post_modal.html.twig" %}
{% endblock %}

{% block footer %}
    {% include "::inc/footer.html.twig" %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
    <!-- Go to www.addthis.com/dashboard to customize your tools -->
    <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-59138f16d2736ebd"></script>
{% endblock %}
</body>

</html>