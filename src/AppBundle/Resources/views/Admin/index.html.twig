{% extends 'AvanzuAdminThemeBundle:layout:base-layout.html.twig' %}

{% block avanzu_logo %}<a href="{{ path('admin_home') }}" class="logo">Ponder</a>{% endblock %}
{% block title %}Ponder admin{% endblock %}
{% block avanzu_navbar %}
    {{ parent() }}
    <li class="dropdown user user-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="https://almsaeedstudio.com/themes/AdminLTE/dist/img/user2-160x160.jpg" class="user-image"
                 alt="User Image" title="" style="">
            <span class="hidden-xs">Admin</span>
        </a>
        <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
                <img src="https://almsaeedstudio.com/themes/AdminLTE/dist/img/user2-160x160.jpg" class="img-circle"
                     alt="User Image">

                <p>Admin</p>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
                <div class="pull-left">
                    <a href="#" class="btn btn-default btn-flat">Profile</a>
                </div>
                <div class="pull-right">
                    <a href="{{ path('avanzu_admin_logout') }}" class="btn btn-default btn-flat">Sign out</a>
                </div>
            </li>
        </ul>
    </li>
{% endblock %}

{% block avanzu_sidebar %}
    {{ parent() }}
    <ul class="sidebar-menu">
        <li class="header">Menu</li>
        <!-- Optionally, you can add icons to the links -->
        <li><a href="{{ path('admin_home') }}"><span>Dashboards</span></a></li>
        <li><a href="{{ path('admin_user_index') }}"><span>Users</span></a></li>
        <li><a href="{{ path('admin_posts_index') }}"><span>Posts</span></a></li>
    </ul>
{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-6 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>3</h3>

                    <p>Users</p>
                </div>
                <div class="icon">
                    <i class="ion ion-person"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>

        <div class="col-lg-6 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>15</h3>

                    <p>Decisions</p>
                </div>
                <div class="icon">
                    <i class="ion ion-chatboxes"></i>
                </div>
                <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>

    <!-- Timeline -->

    <ul class="timeline">

        <li class="time-label">
                  <span class="bg-green">
                    6 Jan. 2017
                  </span>
        </li>

        <li>
            <i class="fa fa-camera bg-purple"></i>

            <div class="timeline-item">
                <span class="time"><i class="fa fa-clock-o"></i> 2 days ago</span>

                <h3 class="timeline-header"><a href="#">User 1</a> uploaded new decision</h3>

                <div class="timeline-body">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                </div>
            </div>
        </li>

        <li class="time-label">
                  <span class="bg-green">
                    4 Jan. 2017
                  </span>
        </li>

        <li>
            <i class="fa fa-user bg-aqua"></i>

            <div class="timeline-item">
                <span class="time"><i class="fa fa-clock-o"></i> 5 days ago</span>

                <h3 class="timeline-header no-border">New user: <a href="#">Petras</a></h3>
            </div>
        </li>

        <li>
            <i class="fa fa-camera bg-purple"></i>

            <div class="timeline-item">
                <span class="time"><i class="fa fa-clock-o"></i> 5 days ago</span>

                <h3 class="timeline-header"><a href="#">User 3</a> uploaded new decision</h3>

                <div class="timeline-body">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                    <img src="http://placehold.it/150x100" alt="..." class="margin">
                </div>
            </div>
        </li>

        <li>
            <i class="fa fa-clock-o bg-gray"></i>
        </li>
    </ul>
{% endblock %}



{% block avanzu_admin_footer %}
    <footer class="main-footer">
        <strong>2017 <a href="https://github.com/nfqakademija/imk">Komanda IMK</a>.</strong>
    </footer>
{% endblock %}

